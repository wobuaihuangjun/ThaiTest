<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_width_test"
            android:layout_height="@dimen/dimen_height_test"
            android:background="@color/colorPrimary"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:text="@string/test_thai_adjust"
            android:visibility="gone" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="@string/test_thai"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textview_thai_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="หลังเปิดโหมดแจ้งเตือนเมื่อหาย เพียงแค่นาฬิกาเชื่อมต่ออินเทอร์เน็ต จะส่งตำแหน่งไปยังแอพฯโดยอัตโนมัติทุกครั้งที่เปิดเครื่อง" />

        <TextView
            android:id="@+id/textview_thai_set_text1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:paddingLeft="100dp" />

        <TextView
            android:id="@+id/textview_thai_set_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:paddingLeft="100dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="100dp">

            <TextView
                android:id="@+id/textview_thai_set_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="100dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_thai_set_text1"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_thai_set_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:id="@+id/text_thai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="#ffffff" />
    </LinearLayout>


</ScrollView>